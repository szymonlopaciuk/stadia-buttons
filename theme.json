{
	"name": "Stadia Buttons",
	"version": "v1.0",
	"author": "szymonlopaciuk",
	"target": "Tweak",
	"description": "When using the Stadia controller, show the correct button glyphs in Steam UI.",
	"manifest_version": 3,
	"inject": {
		"global.css": ["SP", "QuickAccess"]
	},
	"patches": {
		"Variant": {
			"default": "Monochrome",
			"type": "dropdown",
			"values":{
                "Monochrome": {
                    "mono.css": ["SP", "QuickAccess"]
                },
                "Coloured": {
                    "coloured.css": ["SP", "QuickAccess"]
                }
			}
		}
	}
}
